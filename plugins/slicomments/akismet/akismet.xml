	<files>
		<filename plugin="akismet">akismet.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_slicomments_akismet.ini</language>
		<language tag="en-GB">en-GB.plg_slicomments_akismet.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic" addrulepath="plugins/slicomments/akismet/rules">
				<field
					name="site_url"
					type="text"
					description=""
					label="PLG_SLICOMMENTS_AKISMET_FIELD_SITE_URL_LABEL"
					required="true"
					validate="url"
					schemes="http,https"
				/>

				<field
					name="api_key"
					type="text"
					description="PLG_SLICOMMENTS_AKISMET_FIELD_API_KEY_DESC"
					label="PLG_SLICOMMENTS_AKISMET_FIELD_API_KEY_LABEL"
					required="true"
					validate="akismetApi"
				/>
			</fieldset>
		</fields>
	</config>
