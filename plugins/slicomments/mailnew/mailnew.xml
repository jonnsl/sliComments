    <language tag="it-IT">it-IT/it-IT.plg_slicomments_mailnew.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="mailto"
          type="email"
          label="PLG_SLICOMMENTS_FIELD_MAIL_TO_EMAIL_LABEL"
          description="PLG_SLICOMMENTS_FIELD_TO_EMAIL_DESC"
          filter="string"
          size="30"
          validate="email"
        />
      </fieldset>
    </fields>
  </config>
